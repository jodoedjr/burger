<h1>Eat-Da-Burger!</h1>

<div id="undevoured">
    <h2>Order Up!</h2>
    <ul>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
            {{/unless}}
        {{/each}}
    </ul>
</div>

<div id="devoured">
    <h2>Burger Memories!</h2>
    <ul>
        {{#each burgers}}
            {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
            {{/if}}
        {{/each}}
    </ul>
</div>

<h2>Create your own!</h2>
<form class="create-form">
    <div class="form-group">
        <label for="ca">Burger Description:</label>
        <input type="text" id="ca" name="burger_name">
    </div>
    <div class="form-group">
        <label for="devoured">Already Eaten?</label>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Yet!
    </div>
    <button type="submit">Add Burger!</button>
</form>