<div class = "container">
<div class="jumbotron jumbotron-fluid jumbo-background">
    <div class="container">
        <div class="center-me-vertically">
            <img id="jumbo-image" src="assets/images/hamburger-fast-food-pop-art-style_24908-61700.jpg">
            <h1 class="display-4" id="jumbo-text">Eat-Da-Burger!</h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
        <h2 class="center-me">Order Up!</h2>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
            {{/unless}}
        {{/each}}
    </div>

    <div class="col-sm-4 justify-content-center">
        <h2 class="center-me">Create your own!</h2>

        <form class="create-form center-me">
            <div class="form-group">
                <label for="ca">Burger Description:</label><br>
                <input type="text" id="ca" name="burger_name">
            </div>
            <div class="form-group ">
                <label for="devoured">Already Eaten?</label><br>
                <input type="radio" name="devoured" value="0" checked> Not Yet!
                <input type="radio" name="devoured" value="1"> Devoured!<br>
            </div>
            <button class="btn btn-warning" type="submit">Add Burger!</button>
        </form>
    </div>



    <div class="col-sm-4">
        <h2 class="center-me">Burger Memories!</h2>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
    </div>
</div>
</div>